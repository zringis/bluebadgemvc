@model BlueBadge.Models.LocationDetails

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>LocationDetails</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LocationId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LocationState)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationState)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LocationCity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationCity)
        </dd>

    </dl>


    <style>
        /* Always set the map height explicitly to define the size of the div
            * element that contains the map. */
        #map {
            padding-top: 20px;
            margin-top: 20px;
            margin-left: 5%;
            margin-right: 5%;
            margin-bottom: 20px;
            padding-bottom: 20px;
            height: 350px;
            width: auto;
            border-radius: 10px;
            border: 3px solid #03A9F4;
        }
        /* Optional: Makes the sample page fill the window. */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>

    <div class="row">
        <div id="map"></div>

        <script>
            var map;
            function initMap() {
                map = new google.maps.Map(document.getElementById('map'), {
                    center: { lat: 39.790, lng: -86.152 },
                    zoom: 4
                });
            }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAH9Uk-JhFcLXvGrSoaH15KJOin9ITrwmM&callback=initMap"
                async defer></script>
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.LocationId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
